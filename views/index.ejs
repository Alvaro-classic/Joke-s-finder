<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="styles/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">
    <title>Daily Jokes</title>
</head>

<body>
    <section id="content">
        <h1 class="mb-5 header">Find your perfect joke and enjoy</h1>

                <form class="main row" action="/" method="post">
                    <div class="selection col-md-3 col-6 my-1">
                        <label for="category">Category</label>
                        <select id="category" class="form-select" name="category">
                            <option value="Any">Any</option>
                            <option value="Programming">Programming</option>
                            <option value="All">All</option>
                            <option value="Misc">Misc</option>
                            <option value="Dark">Dark</option>
                            <option value="Pun">Pun</option>
                            <option value="Spooky">Spooky</option>
                            <option value="Christmas">Christmas</option>
                        </select>
                    </div>
                    <div class="selection col-md-3 col-6 my-1">
                        <label for="flag">Sensible</label>
                        <select id="flag" class="form-select" name="flag">
                            <option value="">None</option>
                            <option value="nsfw">NSFW</option>
                            <option value="religious">Religius</option>
                            <option value="political">Political</option>
                            <option value="racist">Racist</option>
                            <option value="sexist">Sexist</option>
                            <option value="explicit">Explicit</option>
                        </select>
                    </div>
                    <div class="selection col-md-3 col-6 my-1">
                        <label for="language">Language</label>
                        <select id="language" class="form-select" name="language">
                            <option value="en">English</option>
                            <option value="es">Spanish</option>
                            <option value="fr">French</option>
                            <option value="de">German</option>
                            <option value="pt">Portuguese</option>
                            <option value="cs">Czech</option>
                        </select>
                    </div>
                    <div class="selection col-md-3 col-6 my-1">
                        <label for="parts">Parts</label>
                        <select id="parts" class="form-select" name="parts">
                            <option value="anyone">Anyone</option>
                            <option value="single">Single</option>
                            <option value="twopart">Twopart</option>
                        </select>
                    </div>
                    <div class="find col-6">
                            <button type="submit">Find</button>
                    </div>
                    <div class="find-input col-6">
                            <input class="word-input" type="text" name="word" placeholder="word">
                    </div>               
                    <div class="body-joke col">
                        <% if (locals.data) {%>
                            <% if (data.error === false) {%>
                                <% if (locals.data.type === "single"){ %>
                                    <% const joke = data.joke.split("\n") %>
                                    <% joke.forEach(sentence => {%>
                                        <p><%= sentence %></p>
                                        <%}) %>
                                <%} else{%>
                                    <p><%= data.setup %></p>
                                    <p><%= data.delivery %></p>
                                <%} %>
                            <%} else {%>
                                <p><%= data. causedBy %></p>
                            <% } %>
                        <% } %>
                    </div>
            </form>
    </section>

    <footer>
        <p class="copyright">Â© Copyright <%= year %> Alvaro</p>
    </footer>
    
</body>
</html>